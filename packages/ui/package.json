{
  "name": "@wrench/ui",
  "version": "1.0.0",
  "private": true,
  "source": "src/index.ts",
  "main": "dist/node/",
  "browser": "dist/web/",
  "react-native": "dist/native/",
  "files": [
    "assets/fonts/native/",
    "dist/"
  ],
  "scripts": {
    "build:storybook": "build-storybook",
    "build:native": "tsc -p tsconfig.native.json",
    "build:web": "tsc -p tsconfig.browser.json",
    "build:node": "tsc -p tsconfig.node.json",
    "build:all": "yarn build:web && yarn build:node && yarn build:native",
    "storybook:web": "start-storybook -p 9001",
    "transform:assets": "npx @svgr/cli -d . . --icon --typescript --ignore-existing",
    "deploy": "serverless"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-native": "^0.63.4",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-console": "^1.2.2",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/addon-storysource": "^6.1.11",
    "@storybook/addons": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@svgr/cli": "^5.5.0",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@types/styled-system": "^5.1.10",
    "babel-loader": "^8.2.2",
    "serverless": "^2.16.1",
    "storybook-dark-mode": "^1.0.4",
    "typescript": "^4.1.3"
  }
}
