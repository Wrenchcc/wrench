ENV['COCOAPODS_DISABLE_STATS'] = 'true'

platform :ios, '10.0'

root_path = "../../../node_modules"

require_relative "#{root_path}/@react-native-community/cli-platform-ios/native_modules"

install! 'cocoapods', :deterministic_uuids => false

def add_flipper_pods!
  version = '~> 0.30.2'
  pod 'FlipperKit', version, :configuration => 'Debug'
  pod 'FlipperKit/FlipperKitLayoutPlugin', version, :configuration => 'Debug'
  pod 'FlipperKit/SKIOSNetworkPlugin', version, :configuration => 'Debug'
  pod 'FlipperKit/FlipperKitUserDefaultsPlugin', version, :configuration => 'Debug'
  pod 'FlipperKit/FlipperKitReactPlugin', version, :configuration => 'Debug'
end

# Post Install processing for Flipper
def flipper_post_install(installer)
  installer.pods_project.targets.each do |target|
    if target.name == 'YogaKit'
      target.build_configurations.each do |config|
        config.build_settings['SWIFT_VERSION'] = '4.1'
      end
    end
  end
end

target 'Wrench' do
  platform :ios, '10.0'

  pod 'FBLazyVector', :path => "#{root_path}/react-native/Libraries/FBLazyVector"
  pod 'FBReactNativeSpec', :path => "#{root_path}/react-native/Libraries/FBReactNativeSpec"
  pod 'RCTRequired', :path => "#{root_path}/react-native/Libraries/RCTRequired"
  pod 'RCTTypeSafety', :path => "#{root_path}/react-native/Libraries/TypeSafety"
  pod 'React', :path => "#{root_path}/react-native/"
  pod 'React-Core', :path => "#{root_path}/react-native/"
  pod 'React-CoreModules', :path => "#{root_path}/react-native/React/CoreModules"
  pod 'React-Core/DevSupport', :path => "#{root_path}/react-native/"
  pod 'React-RCTActionSheet', :path => "#{root_path}/react-native/Libraries/ActionSheetIOS"
  pod 'React-RCTAnimation', :path => "#{root_path}/react-native/Libraries/NativeAnimation"
  pod 'React-RCTBlob', :path => "#{root_path}/react-native/Libraries/Blob"
  pod 'React-RCTImage', :path => "#{root_path}/react-native/Libraries/Image"
  pod 'React-RCTLinking', :path => "#{root_path}/react-native/Libraries/LinkingIOS"
  pod 'React-RCTNetwork', :path => "#{root_path}/react-native/Libraries/Network"
  pod 'React-RCTSettings', :path => "#{root_path}/react-native/Libraries/Settings"
  pod 'React-RCTText', :path => "#{root_path}/react-native/Libraries/Text"
  pod 'React-RCTVibration', :path => "#{root_path}/react-native/Libraries/Vibration"
  pod 'React-Core/RCTWebSocket', :path => "#{root_path}/react-native/"

  pod 'React-cxxreact', :path => "#{root_path}/react-native/ReactCommon/cxxreact"
  pod 'React-jsi', :path => "#{root_path}/react-native/ReactCommon/jsi"
  pod 'React-jsiexecutor', :path => "#{root_path}/react-native/ReactCommon/jsiexecutor"
  pod 'React-jsinspector', :path => "#{root_path}/react-native/ReactCommon/jsinspector"
  pod 'ReactCommon/turbomodule/core', :path => "#{root_path}/react-native/ReactCommon"
  pod 'Yoga', :path => "#{root_path}/react-native/ReactCommon/yoga", :modular_headers => true
  pod 'ReactCommon/jscallinvoker', :path => "#{root_path}/react-native/ReactCommon"	
  pod 'DoubleConversion', :podspec => "#{root_path}/react-native/third-party-podspecs/DoubleConversion.podspec"
  pod 'glog', :podspec => "#{root_path}/react-native/third-party-podspecs/glog.podspec"
  pod 'Folly', :podspec => "#{root_path}/react-native/third-party-podspecs/Folly.podspec"

  # Third party deps podspec link
  pod 'RNFirebase', :path => "#{root_path}/react-native-firebase/ios"

  permissions_path = "#{root_path}/react-native-permissions/ios"
  pod 'Permission-Camera', :path => "#{permissions_path}/Camera.podspec"
  pod 'Permission-Microphone', :path => "#{permissions_path}/Microphone.podspec"
  pod 'Permission-PhotoLibrary', :path => "#{permissions_path}/PhotoLibrary.podspec"

  # TODO: fix autolinking (xcode project?)
  pod 'react-native-media-library', :path => "#{root_path}/@pontusab/react-native-media-library/ios"
  pod 'react-native-image-manipulator', :path => "#{root_path}/@pontusab/react-native-image-manipulator/ios"
  pod 'react-native-device-locale', :path => "#{root_path}/@pontusab/react-native-device-locale/ios"
  pod 'RNAppleAuthentication', :path => "#{root_path}/@pontusab/react-native-apple-authentication/ios"

  # Required by Facebook
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'
  pod 'FBSDKShareKit'

  # Required by Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'

  # react-native-fast-image WebP support
  pod 'SDWebImageWebPCoder'

  # react-native-google-signin
  pod 'GoogleSignIn'

  use_native_modules!
  
  # Enables Flipper.
  #
  # Note that if you have use_frameworks! enabled, Flipper will not work and
  # you should disable these next few lines.
  add_flipper_pods!
  post_install do |installer|
    flipper_post_install(installer)
  end
end
