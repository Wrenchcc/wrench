ENV['COCOAPODS_DISABLE_STATS'] = 'true'

platform :ios, "11.0"

root_path = "../../../node_modules"

require_relative "#{root_path}/react-native/scripts/react_native_pods"
require_relative "#{root_path}/@react-native-community/cli-platform-ios/native_modules"
require_relative "#{root_path}/react-native-unimodules/cocoapods.rb"

install! 'cocoapods', :deterministic_uuids => false

target 'Wrench' do
  config = use_native_modules!
  
  use_react_native!(:path => "#{root_path}/react-native", :hermes_enabled => true)

  permissions_path = "#{root_path}/react-native-permissions/ios"
  pod 'Permission-Camera', :path => "#{permissions_path}/Camera/Permission-Camera.podspec"
  pod 'Permission-Microphone', :path => "#{permissions_path}/Microphone/Permission-Microphone.podspec"
  pod 'Permission-PhotoLibrary', :path => "#{permissions_path}/PhotoLibrary/Permission-PhotoLibrary.podspec"

  # Required by Facebook
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'
  pod 'FBSDKShareKit'

  # react-native-fast-image
  pod 'SDWebImageWebPCoder'

  # @react-native-community/google-signin
  pod 'GoogleSignIn'
  pod 'Sentry'

  use_unimodules!(
    modules_paths: [root_path],
    exclude: [ 
      'unimodules-sensors-interface', 
      'unimodules-task-manager-interface',
    ]
  )
  
  # Enables Flipper.
  #
  # Note that if you have use_frameworks! enabled, Flipper will not work and
  # you should disable these next few lines.
  # use_flipper!()

  post_install do |installer|
    react_native_post_install(installer)
    # __apply_Xcode_12_5_M1_post_install_workaround(installer)
  end
end