{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": false,
    "composite": false,
    "removeComments": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "references": [{ "path": "../ui" }],
  "exclude": [".next"]
}
