{
  "profile": "wrench-api",
  "regions": ["eu-central-1"],
  "name": "api",
  "lambda": {
    "memory": 1536,
    "runtime": "nodejs8.10",
    "policy": [
      {
        "Effect": "Allow",
        "Resource": "*",
        "Action": [
          "s3:*",
          "ses:SendEmail",
          "ses:SendTemplatedEmail",
          "ses:SendRawEmail",
          "ses:CreateTemplate",
          "ses:DeleteTemplate"
        ]
      }
    ]
  },
  "cors": {
    "enable": true
  },
  "stages": {
    "production": {
      "domain": "api.wrench.cc",
      "proxy": {
        "command": "node dist/index.js"
      }
    },
    "staging": {
      "domain": "staging.wrench.cc",
      "proxy": {
        "command": "node dist/index.js"
      }
    }
  },
  "environment": {
    "DEBUG": "api:*",
    "AWS_S3_REGION": "us-east-1",
    "AWS_SNS_REGION": "us-west-2",
    "AWS_S3_BUCKET": "wrench-files",
