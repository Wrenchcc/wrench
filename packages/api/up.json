{
  "profile": "wrench-api",
  "regions": ["eu-central-1"],
  "name": "api",
  "lambda": {
    "memory": 2048,
    "runtime": "nodejs10.x",
    "policy": [
      {
        "Effect": "Allow",
        "Resource": "*",
        "Action": [
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents",
          "ssm:GetParametersByPath",
          "s3:*",
          "ses:SendTemplatedEmail",
          "es:*",
          "sns:*"
        ]
      }
    ]
  },
  "cors": {
    "enable": true,
    "allowed_headers": ["*"],
    "allow_credentials": true
  },
  "stages": {
    "production": {
      "domain": "api.wrench.cc",
      "proxy": {
        "command": "node dist/index.js"
      }
    },
    "staging": {
      "domain": "staging.wrench.cc",
      "proxy": {
        "command": "node dist/index.js"
      }
    }
  },
  "environment": {
    "AWS_S3_REGION": "us-east-1",
    "AWS_SNS_REGION": "us-east-1",
    "AWS_SES_REGION": "us-east-1",
