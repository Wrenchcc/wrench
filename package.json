{
  "name": "Wrench",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "ncc run packages/api/src/index.ts",
    "db:import": "cross-env NODE_ENV=development cross-env DEBUG=task* dotenv -e api/.env -- ts-node api/tasks/dbImport.ts",
    "es:create": "cross-env DEBUG=task* dotenv -e api/.env -- ts-node api/tasks/createIndex.ts",
    "es:delete": "cross-env DEBUG=task* dotenv -e api/.env -- ts-node api/tasks/deleteIndex.ts",
    "es:import": "cross-env DEBUG=task* dotenv -e api/.env -- ts-node api/tasks/bulkImport.ts"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.12.1",
    "@types/node": "^10.12.18",
    "babel-eslint": "^10.0.1",
    "bluebird": "^3.5.3",
    "cross-env": "^5.2.0",
    "dotenv-cli": "^1.4.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "prettier": "^1.16.1",
    "prettier-eslint": "^8.8.2",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  }
}
