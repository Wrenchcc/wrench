#!/usr/bin/env bash

set -uex

# Relative to fastlane tool
TARGET_FILE=../packages/mobile/.env

HASH=$(git rev-parse --short HEAD)

echo "GRAPHQL_URL=${GRAPHQL_URL}" >> ${TARGET_FILE}
echo "ENVIRONMENT=${ENVIRONMENT}" >> ${TARGET_FILE}
echo "SENTRY_DSN=${SENTRY_DSN}" >> ${TARGET_FILE}
echo "MAPBOX_API_KEY=${MAPBOX_API_KEY}" >> ${TARGET_FILE}
echo "GITHUB_HASH=${HASH}" >> ${TARGET_FILE}
echo "CODEPUSH_KEY_IOS_STAGING=${CODEPUSH_KEY_IOS_STAGING}" >> ${TARGET_FILE}
echo "CODEPUSH_KEY_IOS_PRODUCTION=${CODEPUSH_KEY_IOS_PRODUCTION}" >> ${TARGET_FILE}
echo "CODEPUSH_KEY_ANDROID_STAGING=${CODEPUSH_KEY_ANDROID_STAGING}" >> ${TARGET_FILE}
echo "CODEPUSH_KEY_ANDROID_PRODUCTION=${CODEPUSH_KEY_ANDROID_PRODUCTION}" >> ${TARGET_FILE}